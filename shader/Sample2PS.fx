
//---------------------------------------------------------------------------------
//	ピクセルシェーダー
//---------------------------------------------------------------------------------

//	受け取る各ピクセルの情報
struct PS_INPUT
{
	float4 Color	: COLOR;		//	色
};

//	計算した結果、画面に表示される色
struct PS_OUTPUT
{
	float4 Color	: COLOR;		//	色
};

//---------------------------------------------------------------------------------
//	各ピクセルの処理
//---------------------------------------------------------------------------------
PS_OUTPUT main( PS_INPUT In )
{
	PS_OUTPUT Out;

	Out.Color = In.Color;

	return Out;
}
